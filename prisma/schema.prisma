generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["myschema"]
}

model AgentWallet {
  id             String   @id @default(uuid())
  circleWalletId String   @unique
  address        String
  createdAt      DateTime @default(now())

  @@schema("myschema")
}

model AgentLog {
  id                String   @id @default(uuid())
  timestamp         DateTime @default(now())
  action            String
  amount            String
  reason            String
  sentimentScore    Float
  marketApySnapshot Float
  txHash            String?

  @@schema("myschema")
}

model MarketData {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  apy       Float
  source    String   // e.g. "Aave", "Hashnote"

  @@schema("myschema")
}

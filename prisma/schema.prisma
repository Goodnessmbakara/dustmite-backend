generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AgentWallet {
  id             String   @id @default(uuid())
  circleWalletId String   @unique // The Circle Wallet ID
  address        String   // The blockchain address (0x...)
  createdAt      DateTime @default(now())
}

enum Action {
  BUY
  SELL
  HOLD
}

model AgentLog {
  id              String   @id @default(uuid())
  timestamp       DateTime @default(now())
  action          Action
  amount          String   // Storing as string to avoid floating point issues, or use Decimal
  reason          String   @db.Text
  sentimentScore  Float
  marketApySnapshot Float
  txHash          String?
}

model MarketData {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  apy       Float
  source    String   // e.g. "Aave", "Hashnote"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AgentWallet {
  id             String   @id @default(uuid())
  circleWalletId String   @unique
  address        String
  createdAt      DateTime @default(now())
}

model AgentLog {
  id                String   @id @default(uuid())
  timestamp         DateTime @default(now())
  action            String
  amount            String
  reason            String
  sentimentScore    Float
  marketApySnapshot Float
  txHash            String?
}

model MarketData {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  apy       Float
  source    String   // e.g. "Aave", "Hashnote"
}
